<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Questões | Reizam</title>

    <link rel="stylesheet" href="/styles/questoes.css">
    <link rel="stylesheet" href="/styles/header.css">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,100..800;1,100..800&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap"
        rel="stylesheet">
</head>

<body>
    <header>
        <a href="/">Reizam</a> 
        <ul>
            <li><a href="/questoes">Questões</a></li>
            <li><a href="/categorias">Categorias</a></li>
            <li><a href="/login">Login</a></li>
        </ul>
    </header>
    <main class="container">
        <h1 class="titulo">Banco de Questões</h1>

        <div class="lista-questoes">

            <% lista.forEach((q, index) => { %>
                <form class="card-questao" method="POST" action="/responderQuestao">
                    <h2><%= index + 1 %>. <%= q.enunciado %></h2>

                    <span class="tags">
                        <p class="tag"><%= q.materia %></p>
                        <p class="tag"><%= q.tema %></p>
                    </span>

                    <div class="opcoes">
                        <label class="opcao">
                            <input type="radio" name="resposta" value="A" required>
                            <span><%= q.altA %></span>
                        </label>

                        <label class="opcao">
                            <input type="radio" name="resposta" value="B">
                            <span><%= q.altB %></span>
                        </label>

                        <label class="opcao">
                            <input type="radio" name="resposta" value="C">
                            <span><%= q.altC %></span>
                        </label>

                        <label class="opcao">
                            <input type="radio" name="resposta" value="D">
                            <span><%= q.altD %></span>
                        </label>

                        <label class="opcao">
                            <input type="radio" name="resposta" value="E">
                            <span><%= q.altE %></span>
                        </label>
                    </div>

                    <input type="hidden" name="idQuestao" value="<%= q.id %>">

                    <button type="submit" class="btn-enviar">
                        Enviar resposta
                    </button>
                </form>
            <% }) %>

        </div>
    </main>

</body>
</html>
