<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Questões | Reizam</title>

    <link rel="stylesheet" href="/styles/questoes.css">
    <link rel="stylesheet" href="/styles/header.css">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,100..800;1,100..800&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap"
        rel="stylesheet">
</head>

<body>
    <header>
        <a href="/">Reizam</a>
        <ul>
            <li><a href="/questoes">Questões</a></li>
            <li><a href="/categorias">Categorias</a></li>
            <li><a href="/login">Login</a></li>
        </ul>
    </header>
    <main class="container">
        <div class="topo-pagina">
            <h1 class="titulo">Banco de Questões</h1>
            <a href="/formQuestao" class="btn-nova">+ Criar Nova Questão</a>
        </div>

        <div class="lista-questoes">

            <% lista.forEach((q, index)=> { %>




                <div class="questao questao-prof">

                    <a href="/editarQuestao/<%= q.id %>" class="btn-editar">✏ Editar</a>

                    <h2>
                        <%= index + 1 %>. <%= q.enunciado %>
                    </h2>

                    <div class="tags">
                        <span class="tag">
                            <%= q.materia %>
                        </span>
                        <span class="tag">
                            <%= q.tema %>
                        </span>
                    </div>

                    <div class="opcoes">
                        <% ["A","B","C","D","E"].forEach(op=> { %>
                            <div class="opcao <%= q.correta === op ? 'correta' : '' %>">
                                <strong>
                                    <%= op %>)
                                </strong>
                                <span>
                                    <%= q["alt" + op] %>
                                </span>
                            </div>
                            <% }) %>
                    </div>

                    <div class="feedback">
                        <p><strong>Resposta Correta:</strong>
                            <%= q.correta %>
                        </p>
                        <p class="explicacao">
                            <%= q.explicacao %>
                        </p>
                    </div>

                </div>


                <% }) %>
        </div>
    </main>


</body>

</html>